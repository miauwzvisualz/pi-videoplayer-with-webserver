#!/bin/bash
# X11 initialization script for video player
# This runs when X server starts

# Disable screen blanking and power saving
xset s off
xset -dpms
xset s noblank

# Load video slicing configuration
source /home/pi/video_config.sh

# Start video player WITHOUT crop filter
exec python3 /home/pi/video_player.py /home/pi/videos
